 <%= render 'shared/page_title', title: "Chef: " + @chef.chefname %>

  <div class="col-md-4 col-md-offset-4 center">
    <%= gravatar_for @chef, size: 200 %>
    <hr />
  </div>
  <div class="row">
    <div class="col-md-4 col-md-offset-4 center">
      <h3><em>Recipes:</em></h3>
       <%= will_paginate @recipes %>
      </div>
    </div>
   
<% @recipes.each do |recipe| %>
    <div class="col-lg-6 col-lg-offset-3 well">
     <h4><%= link_to recipe.name, recipe_path(recipe) %></h4>
     <p><%= recipe.summary %></p>
     <p>
       <span class='quiet'><small>created: <%= time_ago_in_words(recipe.created_at) %> ago, </small></span>
       <span class='quiet'><small>updated: <%= time_ago_in_words(recipe.updated_at) %> ago</small></span>
     </p>
     <div class="pull-right">
        <%= link_to like_recipe_path(recipe, like: true), method: :post do %>
          <i class="glyphicon glyphicon-thumbs-up" ></i>&nbsp;&nbsp;<%= recipe.thumbs_up_total %>
        <% end %> &nbsp;&nbsp;
        <%= link_to like_recipe_path(recipe, like: false), method: :post do %>
          <i class="glyphicon glyphicon-thumbs-down" ></i>&nbsp;&nbsp;<%= recipe.thumbs_down_total %>
        <% end %>
      </div>
    </div>
<% end %>
  <div class="col-md-8">
    <%= link_to "Edit this Chef Profile", edit_chef_path(@chef), class: "btn btn-success pull-right" %>
    <h3><%= @chef.email %></h3>
    <h5><%= link_to "Return to Chef Listing", chefs_path, class: "btn btn-warning btn-small" %></h5>
  </div>
</div>
